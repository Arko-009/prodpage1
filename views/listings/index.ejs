<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
    <% for(let allListing of listings){%>
      <a href="/listings/<%= allListing._id %>" class="listing-link">
        <div class="card col" >
            <img src="<%= allListing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= allListing.title %></b><br>
                &#8377; <%= allListing.Price.toLocaleString("en-IN") %>
              </p>
            </div>
          </div>
        </a>
         <% } %>
</div>
   




 
